@model List<StudentManagementWebApp.Models.Student>

@{
    ViewData["Title"] = "Danh Sách Sinh Viên";
}

<h1>@ViewData["Title"]</h1>

<!-- Nút Thêm Sinh Viên -->
<div class="mb-3">
    <a href="@Url.Action("Create", "Student")" class="btn btn-success">Thêm Sinh Viên</a>
</div>

<!-- Bảng danh sách sinh viên -->
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>MSSV</th>
            <th>Họ Tên</th>
            <th>Ngày Sinh</th>
            <th>Lớp</th>
            <th>Chức Năng</th>  <!-- Cột chức năng thêm vào để sửa và xóa -->
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.MSSV</td>
                <td>@student.HoTen</td>
                <td>@student.NgaySinh.ToString("dd/MM/yyyy")</td>
                <td>@student.Lop</td>
                <td>
                    <!-- Nút Sửa -->
                    <a href="@Url.Action("Edit", "Student", new { id = student.MSSV })" class="btn btn-warning btn-sm">Sửa</a>

                    <!-- Nút Xóa -->
                    <a href="@Url.Action("Delete", "Student", new { id = student.MSSV })" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
